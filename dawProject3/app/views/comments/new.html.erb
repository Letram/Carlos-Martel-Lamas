<%= form_with(model: [@trip, @trip.comments.new], local: true) do |form| %>
	  <div class="field form-group has-feedback" style="font-size:20px;">
	    <%= form.label :title %>
	    <%= form.text_field :title%>
	  </div>

	  <div class="field form-group has-feedback" style="font-size:20px;">
	    <%= form.label :body %>
	    <%= form.text_area :body %>
	  </div>

	  <div class="field form-group has-feedback" style="font-size:20px;">
	    <%= form.submit :class => 'btn btn-info btn-block btn-lg' %>
	  </div>
<% end %>