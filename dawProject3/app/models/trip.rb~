class Trip < ApplicationRecord
	belongs_to :user
	has_many :comments
	has_many :posts
	
	validates :from, :where, presence: {message:"El campo no puede estar vacÃ­o."}
  	scope :recent, ->{where("trips.start_date > ?", 10.years.ago).limit(3)}

	def owned_by?(owner)
	    return false unless owner.is_a? User
    	user == owner
	end
end
