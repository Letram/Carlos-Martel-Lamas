<p id="notice"><%= notice %></p>

<%= render "layouts/friends"%>
<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Where</th>
      <th>Start date</th>
      <th>Final date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if logged_in? %>
	    <% @trips.each do |trip| %>
	      <% if trip.owned_by? current_user%>
			  <tr>
			    <td><%= trip.from %></td>
			    <td><%= trip.where %></td>
			    <td><%= trip.start_date %></td>
			    <td><%= trip.final_date %></td>
			    <td><%= link_to 'Show', trip %></td>
			    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
			    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			  </tr>
	      <% end %>
	    <% end %>
	<% else %>
		<% @trips.recent.each do |trip| %>
				  <tr>
					<td><%= trip.from %></td>
					<td><%= trip.where %></td>
					<td><%= trip.start_date %></td>
					<td><%= trip.final_date %></td>
					<td><%= link_to 'Show', trip %></td>
					<td><%= link_to 'Edit', edit_trip_path(trip) %></td>
					<td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				  </tr>
		<% end %>
	<% end %>    
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
